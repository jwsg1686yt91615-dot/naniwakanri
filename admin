  <div id="auth-screen">
    <img src="https://raw.githubusercontent.com/jwsg1686yt91615-dot/naniwasan/main/head_logo.jpg" style="height:50px; margin-bottom:30px;">
    <input type="password" id="admin-pw" class="pw-input" placeholder="PASS" inputmode="numeric">
    <button class="pw-btn" onclick="checkAuth()">LOGIN</button>
  </div>

  <div id="main-content">
    <div class="header-area"><img class="header-img" src="https://raw.githubusercontent.com/jwsg1686yt91615-dot/naniwasan/main/head_logo.jpg"></div>
    <div class="container">
      <div id="sec-list" class="view-section active"><h2 id="list-title">Today's Records</h2><div id="list-contents"></div></div>
      <div id="sec-cal" class="view-section"><h2>Calendar</h2><div id="calendar"></div></div>
      <div id="sec-staff" class="view-section"><h2>Staff Filter</h2><select id="f-staff-sel" onchange="applyStaffFilter()"></select><div id="staff-res"></div></div>
      <div id="sec-store" class="view-section"><h2>Store Filter</h2><select id="f-store-sel" onchange="applyStoreFilter()"></select><div id="store-res"></div></div>
    </div>

    <div class="nav-bar">
      <div class="nav-item active" id="nav-list" onclick="switchView('list')"><span class="nav-icon">ğŸ“‹</span>ä¸€è¦§</div>
      <div class="nav-item" id="nav-cal" onclick="switchView('cal')"><span class="nav-icon">ğŸ“…</span>æœˆé–“</div>
      <div class="nav-item" id="nav-staff" onclick="switchView('staff')"><span class="nav-icon">ğŸ‘¤</span>æ‹…å½“</div>
      <div class="nav-item" id="nav-store" onclick="switchView('store')"><span class="nav-icon">ğŸª</span>åº—èˆ—</div>
    </div>
  </div>

  <script>
    // ã€é‡è¦ã€‘ã‚ãªãŸã®GASã‚¦ã‚§ãƒ–ã‚¢ãƒ—ãƒªURLã«æ›¸ãæ›ãˆã¦ãã ã•ã„
    const GAS_URL = "https://script.google.com/macros/s/XXXXX/exec"; 

    let allData = [];
    let calendar;

    // èªè¨¼ãƒã‚§ãƒƒã‚¯ï¼ˆfetchã‚’ä½¿ç”¨ï¼‰
    async function checkAuth() {
      const pw = document.getElementById('admin-pw').value;
      const btn = document.querySelector('.pw-btn');
      btn.disabled = true; btn.innerHTML = "èªè¨¼ä¸­...";

      try {
        const response = await fetch(`${GAS_URL}?action=getHistory&pass=${pw}`);
        const data = await response.json();

        if (data.error === "AUTH_FAILED") {
          alert("èªè¨¼å¤±æ•—"); btn.disabled = false; btn.innerHTML = "LOGIN";
        } else if (data && !data.error) {
          allData = data.history || [];
          document.getElementById('auth-screen').style.display = 'none';
          document.getElementById('main-content').style.display = 'block';
          setupFilters(data.allStores, data.allStaff);
          renderList();
          initCalendar();
        } else {
          alert("ã‚¨ãƒ©ãƒ¼: " + (data.error || "ä¸æ˜ãªã‚¨ãƒ©ãƒ¼"));
          btn.disabled = false; btn.innerHTML = "LOGIN";
        }
      } catch (err) {
        alert("é€šä¿¡å¤±æ•—: " + err);
        btn.disabled = false; btn.innerHTML = "LOGIN";
      }
    }

    function setupFilters(stores, staffList) {
      const sS = document.getElementById('f-store-sel');
      const fS = document.getElementById('f-staff-sel');
      sS.innerHTML = '<option value="">åº—èˆ—ã‚’é¸æŠ</option>';
      fS.innerHTML = '<option value="">æ‹…å½“è€…ã‚’é¸æŠ</option>';
      if (stores) stores.forEach(s => sS.add(new Option(s, s)));
      if (staffList) staffList.forEach(s => fS.add(new Option(s, s)));
    }

    function createCard(item) {
      const d = new Date(item.date);
      const tS = d.toLocaleTimeString('ja-JP', {hour: '2-digit', minute:'2-digit'});
      const phoneClean = item.phone ? item.phone.toString().replace(/['\s-]/g, '') : "";
      const card = document.createElement('div'); card.className = 'history-card';
      card.innerHTML = `
        <div class="card-row"><div class="store-name">${item.store}</div><div class="time-value">${tS}</div></div>
        <div class="staff-name">æ‹…å½“è€…: ${item.staff}</div>
        <div class="contact-area"><span>ğŸ“ ${phoneClean}</span>${phoneClean ? `<a href="tel:${phoneClean}" class="call-btn">ç™ºä¿¡</a>` : ''}</div>
        ${item.notes ? `<div style="background:#1a1a1a;padding:8px;border-radius:5px;margin-top:10px;font-size:13px;color:#bbb;">${item.notes}</div>` : ''}
      `;
      return card;
    }

    function renderList(targetDateStr = null) {
      const fDate = targetDateStr || new Date().toLocaleDateString('ja-JP');
      document.getElementById('list-title').innerText = fDate + " Records";
      const c = document.getElementById('list-contents'); c.innerHTML = '';
      const filtered = allData.filter(d => new Date(d.date).toLocaleDateString('ja-JP') === fDate);
      if (filtered.length === 0) c.innerHTML = '<p style="text-align:center;color:#555;">è¨˜éŒ²ãªã—</p>';
      else filtered.forEach(item => c.appendChild(createCard(item)));
    }

    function applyStaffFilter() {
      const v = document.getElementById('f-staff-sel').value;
      const c = document.getElementById('staff-res'); c.innerHTML = '';
      allData.filter(d => d.staff === v).forEach(item => c.appendChild(createCard(item)));
    }

    function applyStoreFilter() {
      const v = document.getElementById('f-store-sel').value;
      const c = document.getElementById('store-res'); c.innerHTML = '';
      allData.filter(d => d.store === v).forEach(item => c.appendChild(createCard(item)));
    }

    function initCalendar() {
      const counts = {}; 
      allData.forEach(d => { 
        const s = new Date(d.date).toLocaleDateString('ja-JP').replace(/\//g, '-'); 
        counts[s] = (counts[s] || 0) + 1; 
      });
      const events = Object.keys(counts).map(s => ({ title: `è¨ˆ${counts[s]}ä»¶`, start: s, allDay: true }));
      
      calendar = new FullCalendar.Calendar(document.getElementById('calendar'), {
        initialView: 'dayGridMonth', locale: 'ja', height: 'auto', events,
        dateClick: (info) => { 
          const clickedDate = new Date(info.date).toLocaleDateString('ja-JP');
          renderList(clickedDate); 
          switchView('list'); 
        }
      });
      calendar.render();
    }

    function switchView(id) {
      document.querySelectorAll('.view-section').forEach(s => s.classList.toggle('active', s.id === 'sec-' + id));
      document.querySelectorAll('.nav-item').forEach(n => n.classList.toggle('active', n.id === 'nav-' + id));
      if(id === 'cal' && calendar) { setTimeout(() => calendar.updateSize(), 100); }
    }
  </script>
</body>
